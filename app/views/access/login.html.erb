

<div class="login">
    <%= form_tag access_attempt_login_path, method: :post, :class => 'form-signin' do %>
      <h2 class="form-signin-heading">Login | Recetas</h2>
      <%= text_field_tag :username, params[:username], class: 'form-control', placeholder: 'Nombre de Usario' %>
      <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password' %>
      <%= submit_tag("Log In", :class => 'btn btn-lg btn-primary btn-block') %>

    <% end %>
</div>

<% @section_title = 'Categorías' %>


<div class="row my-3">
    <div class="col-md-12">
        <div class="card card-body bg-light">
            <h2 class="card-title page-header"><%= @section_title %> <%= link_to 'Nueva Categoría', new_category_path, :class => 'btn btn-success' %></h2>
                <table class="table table-striped">
                    <tr>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                    <% @categories.each do |category| %>
                        <tr>
                            <td><%= category.name %></td>
                            <td>
                                <%= render :partial => 'partials/edit_delete', :locals => {:edit => edit_category_path(category), :delete => category_path(category)} %>
                            </td>
                        </tr>
                    <% end %>
                </table>
        </div>
    </div>
</div>

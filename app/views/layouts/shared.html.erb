<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('cuchara.png'), :rel => 'icon', :type =>  'image/png' %>
    <%= favicon_link_tag asset_path('favicon-32x32.png'), :rel => 'icon', :type =>  'image/png', :sizes => '32x32' %>
    <%= favicon_link_tag asset_path('favicon-96x96.png'), :rel => 'icon', :type =>  'image/png', :sizes => '96x96' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <div class="container py-2">
        <%= yield %>
    </div>

  </body>
</html>

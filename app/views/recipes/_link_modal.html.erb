<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Copia este link para poder compartir</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <input id="bar" value="<%= request.base_url+ '/' + link %>" readonly class="form-control">
      </div>
      <div class="modal-footer">
        <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> -->
        <!-- Target -->
<!-- <input id="bar" value="<%= 'holitas' %>" readonly> -->

<!-- Trigger -->
        <button class="clipboard-btn btn btn-success" data-clipboard-action="copy" data-clipboard-target="#bar">
          <%= fa_icon "clipboard" %> Copiar!
        </button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>

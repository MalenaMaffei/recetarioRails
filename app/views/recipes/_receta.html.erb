<% @page_title = @recipe.name %>

<!-- <div class="container"> -->

        <div class="jumbotron text-center">
            <h1 class="nombre-receta"><%= @recipe.name %></h1>
            <h3 class="categoria"><%= @recipe.category.name %></h3>
        </div>
    <ul class="ingredient">
        <% @recipe.ingredients.each do |ingredient| %>
        <li><%= fa_icon "cutlery" %> <%= ingredient %></li>
        <% end %>
    </ul>
    <div class="divider"></div>
    <div class="instrucciones">
        <%# simple_format(@recipe.instructions) %>
        <%= sanitize(@recipe.instructions, :tags => ['p', 'br', 'strong', 'em']) %>
    </div>


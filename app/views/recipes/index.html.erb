<% @page_title = 'Recetas' %>


<div class="row my-3">
    <div class="col-md-12 fixed d-md-none">
      <%= render(:partial => 'partials/select_category') %>
    </div>
    <div class="col-md-9 col-sm-12">
      <div class="card card-body bg-light">
        <h2 class="card-title">Recetas</h2>
        <table class="table">
            <tr>
                <th>Nombre</th>
                <th>Categor√≠a</th>
            </tr>
            <% @recipes.each do |recipe| %>
                <tr>
                    <td><%= link_to recipe.name, recipe_path(recipe)%></td>
                    <td><%= recipe.category.name %></td>
                </tr>
            <% end %>
        </table>
      </div>
    </div>
    <div class="col-md-3 fixed d-none d-md-block">
      <%= render(:partial => 'partials/sidebar') %>
    </div>
</div>

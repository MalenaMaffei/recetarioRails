
<%= form_tag recipes_path, method: :get, :id =>'search-form', class: "form-inline my-2 my-lg-0" do %>
  <div class="form-group">
    <%= text_field_tag(
        :search,
        params[:search],
        placeholder: "Nombre o ingredientes clave",
        class: "form-control mr-sm-2 my-2"
    ) %>
  </div>

  <%= submit_tag("Buscar", :name => nil, :class => 'btn btn-outline-secondary my-sm-2 mb-3') %>
<% end %>

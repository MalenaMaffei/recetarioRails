<div class="list-group categories">
  <%= link_to_unless_current("Todas", recipes_path, :class => 'list-group-item') do %>
      <%= link_to recipes_path, :class => 'list-group-item active' do %>
        <%= fa_icon 'chevron-left' %> Todas
      <% end %>
  <% end %>
  <% @categories.each do |category| %>
      <%= link_to_unless_current(category.name, category_path(category), :class => 'list-group-item') do %>
          <%= link_to category_path(category), :class => 'list-group-item active'  do %>
            <%= fa_icon 'chevron-left' %> <%= category.name %>
          <% end %>
      <% end %>
    <%# link_to category.name, category_path(category), :class => 'list-group-item' %>
  <% end %>
</div>

      link_to "Todas", recipes_path, :class => 'list-group-item active'
  end %>
  <% @categories.each do |category| %>
      <%= link_to_unless_current(category.name, category_path(category), :class => 'list-group-item') do
          link_to category.name, category_path(category), :class => 'list-group-item active'
      end %>
    <%# link_to category.name, category_path(category), :class => 'list-group-item' %>
  <% end %>
</div>
